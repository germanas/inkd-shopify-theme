   flex-direction: column;

   align-items: center;

   justify-content: center;
}
.smaller-image-2{
  width: 33%;
  height: 300px;

    display: flex;

  background: #CFEAFE ; /* For browsers that do not support gradients */
   flex-direction: column;

   align-items: center;

   justify-content: center;
}
.smaller-image-3{
