/*======My custom CSS=======*/

.promo-block{

  width: 100%;
  height: 400px;
  padding:10px;
  background: #5DFDCB url('https://i.pinimg.com/originals/44/1c/a0/441ca05e9eaa5d7ccd023156646c2e20.png') no-repeat;


  display: flex;
 
   flex-direction: column;

   align-items: center;

   justify-content: center;
}
.big-image{

  width: 67%;
  height: 400px;
  padding:10px;

  background: #F6FAFF; /* For browsers that do not support gradients */
  display: flex;
 
   flex-direction: row;

   align-items: center;

   justify-content: center;
}
.smaller-image-1{
  width: 34%;
  height: 300px;
  float:left;
 
  background: #E7F4FE ; /* For browsers that do not support gradients */
