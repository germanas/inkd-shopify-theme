.promo-block{

  width: 100%;
  height: 400px;
  padding:10px;
  
  background: #C6D2E0 ; /* For browsers that do not support gradients */
  background: -webkit-linear-gradient(#C6D2E0 , #C6D2E0   ); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(#C6D2E0 , #C6D2E0  ); /* For Opera 11.1 to 12.0 */
